env GOLINE=14
env GOPACKAGE=server
env GOFILE=template.go

generate
stdout 'TemplateRoutes has route for GET /'
stdout 'TemplateRoutes has route for GET /form'
stdout 'TemplateRoutes has route for POST /form'

-- index.gohtml --
{{define "GET /" }}
	<h1>Hello, world!</h1>
{{end}}

-- form.gohtml --
{{define "POST /form" }}
	<p>Form submitted</p>
{{end}}

{{define "GET /form" }}
	<form action"=/form" method="POST"></form>
{{end}}

-- go.mod --
module server

go 1.22

-- template.go --
package server

import (
	"embed"
	"html/template"
)

//go:embed index.gohtml
var indexHTML embed.FS

//go:embed form.gohtml
var formHTML embed.FS

//go:generate go run github.com/crhntr/muxt/cmd/muxt
var templates = template.Must(template.Must(template.ParseFS(formHTML, "*")).ParseFS(indexHTML, "*"))
