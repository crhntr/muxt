package server

import (
	"embed"
	"fmt"
	"html/template"
	"net/http"
)

//go:embed *.gohtml
var formHTML embed.FS

//go:generate go run github.com/crhntr/muxt/cmd/muxt
var templates = template.Must(template.ParseFS(formHTML, "*"))

func execute(res http.ResponseWriter, _ *http.Request, t *template.Template, code int, data any) {
	fmt.Printf("execute input type %T\n", data)
	res.WriteHeader(code)
	t.Execute(res, data)
}
-- template_test.go --
package server

import (
	"net/http"
	"net/http/httptest"
	"strings"
	"testing"
)

func Test(t *testing.T) {
	mux := http.NewServeMux()

	TemplateRoutes(mux, nil)

	req := httptest.NewRequest(http.MethodPatch, "/", nil)
	rec := httptest.NewRecorder()

	mux.ServeHTTP(rec, req)

	res := rec.Result()

	if res.StatusCode != http.StatusOK {
		t.Error("expected OK")
	}

	if body := rec.Body.String(); !strings.Contains(body, "Greetings") {
		t.Errorf("expected %q to contain Greetings", body)
	}
}
